<div class="row">
  <div class="col-md-12">
    <h3 class="center">Welcome to Ember API playground, please log in to proceed.</h3>
  </div>
  <div class="col-md-6 col-md-offset-3 mt50">
    <form {{action 'authenticate' method='POST' on='submit'}}>
      {{#if errorMessage}}
        <p class="alert alert-danger">{{errorMessage}}</p>
      {{/if}}
      <div class="form-group">
        <label for="identification">Email address</label>
        {{input id='identification' class="form-control" placeholder='Enter Email' value=identification}}
      </div>
      <div class="form-group">
        <label for="password">Password</label>
        {{input id='password'  class="form-control" placeholder='Enter Password' type='password' value=password}}
      </div>
      <button type="submit" class="btn btn-primary">Login</button>
    </form>
  </div>
</div>
